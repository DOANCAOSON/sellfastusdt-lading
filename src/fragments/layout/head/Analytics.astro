---
import { ANALYTICS } from "@/utils/config";
---

<script
  async
  src=`https://www.googletagmanager.com/gtag/js?id=${ANALYTICS?.vendors?.googleAnalytics?.id}`
></script>
<script is:inline define:vars={{ id: ANALYTICS?.vendors?.googleAnalytics?.id }}>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", id);
</script>
